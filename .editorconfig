# EditorConfig is awesome: https://EditorConfig.org
# 참고: Google Java Style + 네이버 핵데이 Java 코딩 컨벤션
# https://naver.github.io/hackday-conventions-java/

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java files - Google Style + Naver Convention
[*.java]
indent_style = space
indent_size = 2
max_line_length = 120

# Gradle files
[*.gradle]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# XML files
[*.xml]
indent_style = space
indent_size = 2

